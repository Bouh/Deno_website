{
  "scripts": {
    "start": {
      "cmd": "deno run server.ts",
      "desc": "Run Dino server.",
      "allow": ["env", "run", "net", "read"],
      "unstable": true
    },
	"format": {
		"cmd": "deno fmt"
	}
  },
   "watcher": {
    "interval": 350,
    "exts": ["js", "jsx", "ts", "tsx", "json", "ejs", "md", "css"],
    "match": ["**/*.*"],
    "skip": ["**/.git/**"]
  },
  "logger": {
    "fullscreen": true,     
    "debug": true,
    "quiet": false
  }
}